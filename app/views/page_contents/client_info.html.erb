
<div class="container">
  <h2>Client Information</h2>
              
  <table class="table">
    <thead>
      <tr>
        <th>IP</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% user = User.find_by(:name => params[:name]) %>
      <% client_info = user.page_contents.find_by(:page_name => "client_info_page") %>
      <% if(client_info) %>
      
        <% info_list = client_info.html_content.split("\n") %>
        <% info_list.each do |client_info| %>
          <% list = client_info.split(" ")  %>
          <tr>
            <td><%= list[0] %></td>
            <td><%= list[2].to_s + " " + list[3].to_s + list[4].to_s %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
