<p id="notice"><%= notice %></p>


<div class="container">
  <div class="row">

	<div class="panel panel-default">
	  
	  <div class="panel-body">
	    <div class="page-header">
	      <h3><%= @post.title %></h3>
	  	  <h4>
		    <cite><%= link_to @post.user.name, developer_homepage_path(@post.user) %></cite>
		  </h4>
		</div>
