<p id="notice"><%= notice %></p>

<h1 class="">Posts</h1>

<div class="container">
  <div class="row">
    <table class="table">
      <tbody class="col-md-12">
        <% @posts.each do |post| %>
          <tr>
            <td class="col-md-2"><blockquote><h4><%= link_to post.title, post %></h4></blockquote></td>
            
            <td class="col-md-8"><%= get_intro(post.body).html_safe %></td>
            <td>
              <h5>
              <% if post.user.is_dev? %>
                <%= link_to post.user.name.to_s, developer_homepage_path(post.user) %>
              <% else %>
                <%= post.user.name.to_s %>
              <% end %>
              </h5>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "Create a new post", new_post_path, method: :get, class: "btn btn-info"%>
</div>

