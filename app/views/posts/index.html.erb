<div class="container">
  <div class="row">
    <div class="col-md-9">  
      <h3 class="page-header">Posts</h3>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-9" id="posts-panel">  
      <% @posts.each do |post| %>
        <div class="row">

          <div class="col-md-12">
            <h4><%= link_to post.title, post, method: :get %></h4>
            

            <div class="col-md-8">
                <!-- reserved for tags -->
            </div>


            <div class="col-md-4">
              <p class="text-muted pull-right">
                <cite>
                  <% if post.user.is_dev? %>
                    <%= link_to post.user.name.to_s, developer_homepage_path(post.user), class: "text-muted" %>
                  <% else %>
                    <%= post.user.name.to_s %>
                  <% end %>
                </cite>
              </p>
            </div>
          </div>

        </div>
      
        
        <div class="row">
          <div class="col-md-12">
            <%= get_intro(post.body).html_safe %>
          </div>
        </div>
        
        <hr>
      <% end %>
    </div>
    <div class="col-md-2">

      <%= link_to "Create a new post", new_post_path, method: :get, class: "btn btn-info"%>
      <br><br>
      <ul class="list-group">
        <!-- <li class="list-group-item"></li> -->
      </ul>
    </div>
  </div>
</div>

