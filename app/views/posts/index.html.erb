<p id="notice"><%= notice %></p>

<h1 class="page-header">Posts</h1>

<div class="container">
  <div class="row">
    <table class="table">
      <tbody class="col-md-12">
        <% @posts.each do |post| %>
          <tr>
            <td class="col-md-2"><blockquote><h4><%= link_to post.title, post %></h4></blockquote></td>
            
            <td class="col-md-8"><%= get_intro(post.body).html_safe %></td>
            <td><%= post.user.name.to_s %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

