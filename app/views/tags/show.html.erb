<div class="container">
  <div class="row">
  	<div class="page-header">
	  	<h3 class="text-info">
	  		<%= @tag.name %>
			</h3>
	  </div>
  </div>
  
  <% @posts = @tag.posts %>
  <% @posts.each do |post| %>
  	<div class="row">
  		<h4><%= link_to post.title, post, method: :get %></h4>
  	</div>
  <% end %>

  <br>
  <%= link_to 'Edit', edit_tag_path(@tag) %> |
	<%= link_to 'Back', tags_path %>
</div>






