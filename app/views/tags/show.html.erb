<div class="container">
  <div class="row">
  	<div class="page-header">
	  	<h3 class="">
	  		Tag: <%= @tag.name %>
			</h3>
	  </div>
  </div>
  
  <% @posts = @tag.posts %>
  <% @posts.each do |post| %>
  	<div class="row">
  		<h4><%= link_to post.title, post, method: :get %></h4>
  	</div>
  <% end %>

  <br>
</div>






